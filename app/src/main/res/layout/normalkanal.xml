<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/babo"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/chat_back">

        <ImageButton
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:id="@+id/imageView5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:minHeight="50dp"
            android:minWidth="400dp"
            android:maxHeight="50dp"
            android:maxWidth="400dp"
            android:cropToPadding="false"
            android:layout_gravity="bottom|center_horizontal"
            android:baselineAlignBottom="false"
            android:elevation="8dp" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_gravity="right"
        android:id="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/babo"
        android:background="@mipmap/chat_back">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:background="#00000000"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/like_deneme"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageButton7"
            android:layout_marginEnd="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton7"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/warning_deneme" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Offical Kanal AdÄ±"
            android:id="@+id/textView4"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColorHighlight="#70ff00"
            android:textIsSelectable="false"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/button7"
            android:layout_alignEnd="@+id/imageButton7" />

    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:id="@+id/imageView10"
        android:layout_gravity="right|top"
        android:background="#2c434344"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true" />

</RelativeLayout>