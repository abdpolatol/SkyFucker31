<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@mipmap/chat_back"
        android:elevation="10dp">

        <Button
            android:id="@+id/button6"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:background="@mipmap/left"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.52" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#00000000"
            android:minHeight="75dp"
            android:minWidth="50dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Abdurrahman"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16dp"
            android:textIsSelectable="false"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="55dp">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:src="@mipmap/fav"
                android:background="#00000000"
                android:layout_marginStart="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="7dp"
                android:layout_height="21dp"
                android:minWidth="50dp"
                android:background="@mipmap/sikayet"
                android:layout_weight="0.13"
                android:layout_marginRight="15dp"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="#efe7de">

        <ListView
            android:id="@+id/listView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffc8b0" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton2"
            android:layout_weight="0.71"
            android:layout_gravity="bottom"
            android:background="@mipmap/yazzbas"
            android:layout_alignTop="@+id/editText2"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="6dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@mipmap/yazz"
            android:hint="Bir mesaj yaz"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gonder"
            android:layout_gravity="bottom"
            android:layout_marginRight="20dp"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/paper"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/progressBar2" />
</RelativeLayout>
</FrameLayout>